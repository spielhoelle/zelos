#index-banner
  .section.no-pad-bot
    .container.mt-5
      %h1.header.center Zelos Invoice
      .row.center
        %h5.header.col.s12 Invoices, customer lists and data for freelance software engineers.
        -#%h5.header.col.s12 All you invoices in one app

      .row.center
        - if user_signed_in?
          = link_to admin_entries_path, class: "btn waves-effect waves-light" do
            = "Edit invoices"

        - else
          %a.waves-effect.btn.waves-light.btn.modal-trigger{:href => "#modal1", "data-turbolinks": "false"} Login

      %br/
      %br/
  -#.parallax
    -#= image_tag('header.jpg')


.center.scrollfire.scrollfire1
  = image_tag('screen1.jpg', class: "z-depth-5 mb-5 responsive-img")
